<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.uipart1">

    <uses-sdk
        android:minSdkVersion="INSERT_YOUR_DESIRED_minSdkVersion_HERE"
        tools:overrideLibrary="com.paypal.android.sdk.payments" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Coffee"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UiPart1"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name="com.example.uipart1.Activity.ConfirmPay"
            android:exported="true" />
        <activity
            android:name="com.example.uipart1.Activity.MakePaymentActivity"
            android:exported="true" />
        <activity
            android:name="com.example.uipart1.Activity.OrdConfirm"
            android:exported="true" />
        <activity
            android:name="com.example.uipart1.Activity.ProByCate"
            android:exported="true" />
        <activity
            android:name="com.example.uipart1.Activity.PayActivity"
            android:exported="true" />
        <activity
            android:name="com.example.uipart1.Activity.CartActivity"
            android:exported="true" />
        <activity
            android:name="com.example.uipart1.Activity.ShowDetailProduct"
            android:exported="true" />
        <activity
            android:name="com.example.uipart1.Activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>