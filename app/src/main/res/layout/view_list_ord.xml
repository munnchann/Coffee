<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutOrd"
    android:layout_width="350dp"
    android:layout_height="115dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/txtid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <TextView
                android:id="@+id/quantityPro"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/archivo_narrow"
                android:text="1"
                android:textColor="#337E36"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/img_ord"
                android:layout_width="82dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/cf" />

            <ImageView
                android:id="@+id/btndelete"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/delete" />

            <ImageView
                android:id="@+id/minor"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/minimize" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/add" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/archivo_narrow"
                android:text="$"
                android:textColor="#0E0D0D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtname_pro"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/archivo_narrow"
                android:maxLines="1"
                android:text="Cafe Sua Da"
                android:textColor="#0E0D0D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginStart="135dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/archivo_narrow"
                android:text="0"
                android:textColor="#0E0D0D"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>